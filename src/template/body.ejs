<section class="hero-collage">
    <div class="collage-content">
        <h1>
            <%= model.collageTitle %>
        </h1>
    </div>
</section>

<section class="news-feed">
    <div class="feed-controls">
        <input type="search" id="searchBar" placeholder="Buscar proyectos..." value="<%= model.searchQuery %>" />
        <select id="categoryFilter">
            <option value="all">Todos los proyectos</option>
            <% model.categories.forEach(cat=> { %>
                <option value="<%= cat %>" <%=model.currentFilter===cat ? 'selected' : '' %>><%= cat %>
                </option>
                <% }) %>
        </select>
    </div>
    <div id="newsGrid" class="news-grid">
        <% model.newsItems.forEach(item=> { %>
            <article class="news-card" data-id="<%= item.id %>">
                <img src="<%= item.image %>" alt="<%= item.title %>" loading="lazy" />
                <div class="card-body">
                    <h3>
                        <%= item.title %>
                    </h3>
                    <time>
                        <%= item.date %>
                    </time>
                    <p>
                        <%= item.summary.substring(0, 120) %>...
                    </p>
                    <div class="card-meta">
                        <span class="likes">❤️ 20</span>
                        <span class="category">
                            <%= item.summary.split(' ')[0] %></span>
          </div>
        </div>
      </article>
    <% }) %>
  </div>

  <div id="pagination" class="pagination">
    <% for(let i=1; i <= model.totalPages; i++) { %>
      <button class="page-btn <%= i === model.currentPage ? ' active' : '' %>" data-page="<%= i %>"><%= i %></button>
                                        <% } %>
                    </div>
</section>